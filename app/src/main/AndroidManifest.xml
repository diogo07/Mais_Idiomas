<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.maisidiomas">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompat.TelaCheia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:label="Acesso"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.CadastroActivity"
            android:label="Cadastro"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.DashBoardActivity"
            android:label="Início"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.SobreActivity"
            android:label="Sobre"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.DicionarioActivity"
            android:label="Dicionário"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ConfiguracoesActivity"
            android:label="Configurações"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.LevelActivity"
            android:label="Nível"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.FaseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Fase3Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.InserirQuestaoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.CreditosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.AjudaActivity"
            android:label="Ajuda" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FaseActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/estilo_borda">

                <TextView
                    android:id="@+id/tv_nivel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Nível 1"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_pontos_questao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Pontos da questão: 20"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:background="@drawable/estilo_borda"
                android:text="SCORE: 0" />

            <TextView
                android:id="@+id/tv_questao_numero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:background="@drawable/estilo_borda"
                android:text="QUESTÃO 01" />


            <TextView
                android:id="@+id/tv_pergunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:text="Selecione a imagem que corresponde a palavra:" />

            <TextView
                android:id="@+id/tv_palavra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:text="KEY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_opc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/estilo_borda"
                    android:layout_weight="1"
                    android:padding="8dp"
                    app:srcCompat="@mipmap/ic_arvore" />

                <ImageView
                    android:id="@+id/img_opc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/estilo_borda"
                    android:layout_weight="1"
                    android:padding="8dp"
                    app:srcCompat="@mipmap/ic_abacaxi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_opc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/estilo_borda"
                    android:layout_weight="1"
                    android:padding="8dp"
                    app:srcCompat="@mipmap/ic_chave" />

                <ImageView
                    android:id="@+id/img_opc4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/estilo_borda"
                    android:layout_weight="1"
                    android:padding="8dp"
                    app:srcCompat="@mipmap/ic_aviao" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_proximo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/estilo_botao"
                android:text="PRÓXIMO" />



        </LinearLayout>

    </ScrollView>

</LinearLayout>
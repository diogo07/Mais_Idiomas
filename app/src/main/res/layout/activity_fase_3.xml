<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Fase3Activity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estilo_borda"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nivel_fase3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Nível 3"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_pontos_questao_fase3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Pontos da questão: 30"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_score_fase3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:background="@drawable/estilo_borda"
                android:text="SCORE: 0" />

            <TextView
                android:id="@+id/tv_questao_numero_fase3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:background="@drawable/estilo_borda"
                android:text="QUESTÃO 01" />

            <TextView
                android:id="@+id/tv_pergunta_fase3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:text="Selecione a a alternativa que não possui relação com as demais da lista:" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">

                <RadioButton
                    android:id="@+id/rb_opc1"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="fork"
                    android:textAllCaps="true" />

                <RadioButton
                    android:id="@+id/rb_opc2"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="spoon"
                    android:textAllCaps="true" />

                <RadioButton
                    android:id="@+id/rb_opc3"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="knife"
                    android:textAllCaps="true" />

                <RadioButton
                    android:id="@+id/rb_opc4"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="umbrella"
                    android:textAllCaps="true" />
            </RadioGroup>

            <Button
                android:id="@+id/bt_proximo_fase3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/estilo_botao"
                android:text="PRÓXIMO" />



        </LinearLayout>

    </ScrollView>

</LinearLayout>